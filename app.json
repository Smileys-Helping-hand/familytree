# App Configuration
{
  "name": "Family Tree Application",
  "description": "A full-stack family tree management system with React frontend and Express backend",
  "website": "https://github.com/yourusername/familytree",
  "repository": "https://github.com/yourusername/familytree",
  "keywords": ["family-tree", "genealogy", "react", "express", "postgresql"],
  
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    }
  ],
  
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": true
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token generation",
      "generator": "secret",
      "required": true
    },
    "JWT_REFRESH_SECRET": {
      "description": "Secret key for JWT refresh token",
      "generator": "secret",
      "required": true
    },
    "JWT_EXPIRE": {
      "description": "JWT token expiration time",
      "value": "7d"
    },
    "JWT_REFRESH_EXPIRE": {
      "description": "JWT refresh token expiration time",
      "value": "30d"
    },
    "CLOUDINARY_CLOUD_NAME": {
      "description": "Cloudinary cloud name for image storage",
      "required": false
    },
    "CLOUDINARY_API_KEY": {
      "description": "Cloudinary API key",
      "required": false
    },
    "CLOUDINARY_API_SECRET": {
      "description": "Cloudinary API secret",
      "required": false
    },
    "SENDGRID_API_KEY": {
      "description": "SendGrid API key for email notifications",
      "required": false
    },
    "EMAIL_FROM": {
      "description": "Email address for sending notifications",
      "value": "noreply@familytree.app",
      "required": false
    },
    "STRIPE_SECRET_KEY": {
      "description": "Stripe secret key for payment processing",
      "required": false
    },
    "STRIPE_WEBHOOK_SECRET": {
      "description": "Stripe webhook secret for verifying webhook events",
      "required": false
    },
    "MAX_FILE_SIZE": {
      "description": "Maximum file upload size in bytes",
      "value": "10485760"
    }
  },
  
  "scripts": {
    "postdeploy": "echo 'Deployment complete!'"
  }
}
